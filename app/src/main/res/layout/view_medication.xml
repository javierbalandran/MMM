<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/medicationNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Medication: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/medicationNameDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/medicationSourceHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/medicationSourceDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/medicationDosageHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount per Interval: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/medicationAmountDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/medicationIntervalDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/medicationDescriptionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description/Purpose: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/medicationDescriptionDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/medicationEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Edit"
        android:textSize="25sp"/>

</LinearLayout>
