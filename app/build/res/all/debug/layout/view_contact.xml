<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ContactView" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/contactNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Name: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/contactNameDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/contactTypeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/contactTypeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/contactRelationHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relation: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/contactRelationDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/contactHomeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Phone: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/contactHomeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/contactCellHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cell Phone: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/contactCellDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/contactWorkHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Phone: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/contactWorkDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/contactEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Edit"
        android:textSize="25sp"/>

</LinearLayout>
